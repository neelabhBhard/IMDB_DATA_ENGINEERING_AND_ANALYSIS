{
	"name": "FlatteningLanguageTitleAkas",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "IMPORTING_TITLE_CREW",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "flatten1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          TCONST as string,",
				"          DIRECTORS as string,",
				"          WRITERS as string,",
				"          DI_JOB_ID as string,",
				"          DI_CREATED_DT as date",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'table',",
				"     partitionBy('roundRobin', 2)) ~> source1",
				"source1 derive(LANGUAGE_NEW = split(LANGUAGE, ',')) ~> derivedColumn1",
				"derivedColumn1 foldDown(unroll(LANGUAGE_NEW),",
				"     mapColumn(",
				"          LANGUAGE_NEW = LANGUAGE_NEW,",
				"          TITLEID",
				"     ),",
				"     skipDuplicateMapInputs: false,",
				"     skipDuplicateMapOutputs: false) ~> flatten1"
			]
		}
	}
}